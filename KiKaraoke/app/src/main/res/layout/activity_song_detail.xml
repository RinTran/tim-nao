<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image_background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thienphuoc.tpkaraoke.SongDetailActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibACDetailFavorite"
        android:paddingBottom="20dp"
        android:src="@drawable/ic_favorite_unselected"
        android:background="#00000000"
        android:layout_alignTop="@+id/ibACDetailClose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="51202890"
        android:textSize="30sp"
        android:layout_above="@+id/tvACDetailNameSong"
        android:id="@+id/tvACDetailID"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#006331" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivACDetailAuthor"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_author" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="Lý Hải"
        android:textSize="20sp"
        android:id="@+id/tvACDetailAuthor"
        android:layout_above="@+id/ivACDetailAuthor"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textColor="#006331" />

    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:text="Tác Giả:"
        android:textSize="20sp"
        android:id="@+id/tvACDetail"
        android:layout_toLeftOf="@+id/tvACDetailID"
        android:layout_above="@+id/ivACDetailAuthor"
        android:textStyle="bold"
        android:textColor="#1d9b5c" /-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Một mùa xuân ...."
        android:textColor="#006331"
        android:id="@+id/tvACDetailLyric"
        android:paddingTop="20dp"
        android:textSize="15sp"
        android:singleLine="true"
        android:textStyle="bold|italic"
        android:layout_below="@+id/ivACDetailAuthor"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibACDetailClose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btn_close"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take me to your heart"
        android:textColor="#006331"
        android:id="@+id/tvACDetailNameSong"
        android:paddingBottom="20dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_above="@+id/tvACDetailAuthor"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>
